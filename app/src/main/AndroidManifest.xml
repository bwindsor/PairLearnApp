<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.bwindsor.pairlearnapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity" android:label="@string/home_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SetupTestActivity"
                  android:parentActivityName=".HomeActivity"
                  android:label="@string/test_setup_title"/>
        <activity android:name=".TestActivity"
                  android:parentActivityName=".SetupTestActivity"
                  android:label="@string/test_title"/>
    </application>

</manifest>